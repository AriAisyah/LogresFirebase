<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".SignInActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins"
        android:text="@string/welcome"
        android:textColor="@color/colorBlack"
        android:textSize="40sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_email_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:hint="@string/email"
        android:padding="20dp" />

    <EditText
        android:id="@+id/et_password_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email_signIn"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:hint="@string/password"
        android:padding="20dp" />

    <TextView
        android:id="@+id/btn_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_signIn"
        android:layout_marginTop="60dp"
        android:text="@string/sign_in"
        android:textColor="@color/colorBlack"
        android:textSize="25sp"
        android:textStyle="bold" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_password_signIn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="#FF4500"
        android:src="@drawable/arrow_right"
        app:fabSize="normal" />

    <ImageView
        android:id="@+id/icon_google"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_sign_in"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/icon_fb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btn_sign_in"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:src="@drawable/facebook" />

    <TextView
        android:id="@+id/go_to_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_google"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:text="@string/sign_up_underline"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_fb"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppins"
        android:text="@string/forgot_password"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

</RelativeLayout>